<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:text="result"
        android:gravity="right|bottom"
        android:paddingBottom="15dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:textSize="50dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <Button
            android:id="@+id/bracket1"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="(" />

        <Button
            android:id="@+id/bracket2"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text=")" />

        <Button
            android:id="@+id/remain"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="%" />

        <Button
            android:id="@+id/AC"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF5100"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="AC" />

        <Button
            android:id="@+id/_7"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="7" />

        <Button
            android:id="@+id/_8"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="8" />

        <Button
            android:id="@+id/_9"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="9" />

        <Button
            android:id="@+id/division"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="รท" />

        <Button
            android:id="@+id/_4"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="4" />

        <Button
            android:id="@+id/_5"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="5" />

        <Button
            android:id="@+id/_6"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="6" />

        <Button
            android:id="@+id/X"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="X" />

        <Button
            android:id="@+id/_1"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="1" />

        <Button
            android:id="@+id/_2"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="2" />

        <Button
            android:id="@+id/_3"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="3" />

        <Button
            android:id="@+id/subtract"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="-" />

        <Button
            android:id="@+id/_."
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#535353"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="." />

        <Button
            android:id="@+id/_0"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FFBD3A"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="0" />

        <Button
            android:id="@+id/equal"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#535353"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="=" />

        <Button
            android:id="@+id/plus"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:backgroundTint="#FF8400"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:text="+" />
    </GridLayout>


</LinearLayout>